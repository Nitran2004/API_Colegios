@model IEnumerable<string>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login TTHH</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .form-login {
            width: 400px;
            height: 400px;
            background-color: white;
            margin: auto;
            margin-top: 100px;
            box-shadow: 7px 13px 37px #000;
            padding: 20px 30px;
            color: black;
        }

            .form-login h1 {
                margin: 0;
                text-align: center;
                height: 50px;
                margin-bottom: 20px;
                border-bottom: 1px solid;
                font-size: 30px;
            }

        body {
            font-family: arial;
        }

        .control {
            width: 100%;
            border: 1px solid #ccc;
            margin-bottom: 20px;
            padding: 6px 15px;
            font-size: 16px;
            font-weight: bold;
        }

        .form-group {
            width: 100%;
            text-align: center;
            margin-bottom: 20px;
            padding: 6px 15px;
            font-size: 16px;
            font-weight: bold;
        }

        .button {
            width: 100%;
            height: 40px;
            background-color: blue;
            border: none;
            color: white;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()
        <section class="form-login">
            <h1>Login</h1>
            <input class="control" type="text" name="username" placeholder="Usuario"><br>
            <input class="control" type="password" name="password" placeholder="Contraseña"><br>
            <div class="form-group">
                Emisor:
                <select name="emisor" class="control">
                    @foreach (var emisor in Model)
                    {
                        <!-- <option>@emisor</option> -->
                    }
                </select>
            </div>
            <button class="button" type="submit">Login</button>
        </section>
    </form>
</body>
</html>
